Package: lapop
Type: Package
Title: Tools for Visualizing and Labeling Americas Barometer Data
Version: 2.1.0
Authors@R: c(person(given = "Robert", family = "Vidigal", 
             role = c("cre","aut"), 
             email = "robert.vidigal@vanderbilt.edu", 
             comment = c(ORCID = "0000-0001-5713-119X")),
